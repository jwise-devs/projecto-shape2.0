<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Fim -->

    <link rel="shortcut icon" href="/assets/img/favicon2.0.png" type="image/x-icon">

    <link rel="stylesheet" href="/assets/style/registro.css">
    <title>Registro</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <a href="/">
                    <h1 class="text-center"><img src="/assets/img/logo-nome.jpg" alt="" class="img-fluid"
                            style='width: 500px; height: 200px; object-fit: cover;'></h1>
                </a>
                <!-- pode se criar varias divs com o comando "div.classe>div.classe>div.classe>etc..." -->

                <%- include('includes/messeges') %>

                    <div class="row">

                        <div class="col-lg my-5">
                            <% if (usuario.id) {%>

                                <h4>Editar</h4>
                                    <form action="/clientes/edit/<%= usuario.id %>" method="post" class="form-cadastro"
                                        onsubmit="return validateForm()">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                        <div class="mb-3">
                                            <label class="form-label">Seu Nome</label>
                                            <input type="name" class="form-control validar usuario" name="nome" value="<%= usuario.nome  %>">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Seu E-mail</label>
                                            <input type="email" class="form-control validar usuario" name="email" value="<%= usuario.email  %>">
                                        </div>

                                        <button type="submit" class="btn btn-primary">Atualiza Dados</button>
                                    </form>
                                <% }else { %>

                                    <h4>Cadastro</h4>
                                    <form action="/login/registro" method="post" class="form-cadastro"
                                        onsubmit="return validateForm()">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                        <div class="mb-3">
                                            <label class="form-label">Seu Nome</label>
                                            <input type="name" class="form-control validar usuario" name="nome">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Seu E-mail</label>
                                            <input type="email" class="form-control validar usuario" name="email">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Sua senha</label>
                                            <input type="password" class="form-control validar" name="password">
                                        </div>
                                        <p class="my-3">Se tem conta, faca o <a href="/login/index"
                                                class="custom-link">login</a></p>
                                        <button type="submit" class="btn btn-primary">Cria a sua conta</button>
                                    </form>
                                    <% } %>
                        </div>


                    </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        function validateForm() {
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();

            if (!email || !password) {
                alert('Por favor, preencha todos os campos.');
                return false;
            }

            return true;
        }
    </script>
</body>

</html>
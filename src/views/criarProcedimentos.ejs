<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Fim -->

    <link rel="shortcut icon" href="/assets/img/favicon2.0.png" type="image/x-icon">

    <link rel="stylesheet" href="/assets/style/registro.css">
    <title>Procedimentos</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <a href="/">
                    <h1 class="text-center"><img src="/assets/img/logo-nome.jpg" alt="" class="img-fluid"
                            style='width: 500px; height: 200px; object-fit: cover;'></h1>
                </a>
                <!-- pode se criar varias divs com o comando "div.classe>div.classe>div.classe>etc..." -->

                <%- include('includes/messeges') %>

                    <div class="row">

                        <div class="col-lg my-5">

                            <% if (typeof tratamento !=='undefined' && tratamento && tratamento.id) {%>
                                <h4>Editar Procedimentos</h4>
                                <form action="/procedimentos/edit/<%= tratamento.id %>" method="post" class="form-cadastro"
                                    onsubmit="return validateForm()">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="mb-3">
                                        <label class="form-label">Pacote</label>
                                        <input type="name" class="form-control" name="pacote" value="<%= tratamento.pacote  %>">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Subpacote</label>
                                        <input type="name" class="form-control" name="subpacote"
                                            placeholder="Se nao tiver um subpacote pode deixar em branco" value="<%= tratamento.subpacote  %>">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Procedimento</label>
                                        <input type="name" class="form-control" name="procedimentos" value="<%= tratamento.nome  %>">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Valor</label>
                                        <input type="text" class="form-control" name="valor" id="valor" value="<%= tratamento.preco  %>">
                                    </div>


                                    <button type="submit" class="btn btn-primary">Editar</button>


                                    <a href="/procedimentos/list" class="btn btn-primary">Voltar</a>
                                </form>
                                <% }else{%>
                                    <h4>Procedimento</h4>
                                <form action="/procedimentos/create/data" method="post" class="form-cadastro"
                                    onsubmit="return validateForm()">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="mb-3">
                                        <label class="form-label">Pacote</label>
                                        <input type="name" class="form-control" name="pacote" value="">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Subpacote</label>
                                        <input type="name" class="form-control" name="subpacote"
                                            placeholder="Se nao tiver um subpacote pode deixar em branco">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Procedimento</label>
                                        <input type="name" class="form-control" name="procedimentos">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Valor</label>
                                        <input type="text" class="form-control" name="valor" id="valor">
                                    </div>


                                    <button type="submit" class="btn btn-primary">Criar Procedimento</button>


                                    <a href="/admindashboard" class="btn btn-primary">Voltar</a>
                                </form>
                                    <% } %>

                        </div>


                    </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        document.getElementById('valor').addEventListener('input', function (e) {
            // Remove caracteres não numéricos, exceto ponto e vírgula
            let valor = e.target.value.replace(/[^0-9.,]/g, '');

            // Substitui vírgula por ponto para manter um formato padrão de número decimal
            valor = valor.replace(',', '.');

            e.target.value = valor;
        });
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<title>Progresso</title>

<body>
  <%- include('includes/navbar') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Progresso de <%= sessao.usuario ? sessao.usuario.nome : 'Usuário não encontrado' %></h1>

        <%- include('includes/messeges') %>

        <% if (sessao && sessao.tratamentosArray.length > 0) { %>
          <form action="/progresso/data/<%= sessao.id %>" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <% sessao.tratamentosArray.forEach((tratamento, index) => {
    const datasTratamento = tratamentoDatas[tratamento] || [];
    const total = datasTratamento.length;
    const concluidos = datasTratamento.filter(dt => dt.compareceu).length;
    const progresso = total > 0 ? Math.round((concluidos / total) * 100) : 0;
  %>
    <div class="card my-3">
      <div class="card-body">
        <h5 class="card-title"><%= tratamento %></h5>

        <div class="mb-2">
            <p>Tratamento: <%= tratamento %>, datasTratamento length: <%= datasTratamento.length %></p>
          <% datasTratamento.forEach((dataObj, idx) => { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox"
                name="comparecimentos[<%= tratamento %>][<%= idx %>][compareceu]"
                id="check_<%= tratamento %>_<%= idx %>"
                <%= dataObj.compareceu ? 'checked' : '' %> >

              <input type="hidden" name="comparecimentos[<%= tratamento %>][<%= idx %>][data]"
                value="<%= dataObj.data %>">

              <label class="form-check-label" for="check_<%= tratamento %>_<%= idx %>">
                <%= new Date(dataObj.data).toLocaleDateString() %>
              </label>
            </div>
          <% }); %>
        </div>

        <div class="input-group my-2">
          <input type="date" class="form-control"
            name="novasDatas[<%= tratamento %>][]" placeholder="Adicionar nova data">
        </div>

        <div class="progress">
          <div class="progress-bar bg-success" role="progressbar"
            style="width: <%= progresso %>%;" aria-valuenow="<%= progresso %>"
            aria-valuemin="0" aria-valuemax="100">
            <%= progresso %>%
          </div>
        </div>
        <small class="text-muted"><%= concluidos %> de <%= total %> sessões concluídas</small>
      </div>
    </div>
  <% }); %>

  <div class="text-center mt-4">
    <a href="/procedimentos" class="btn btn-secondary">Voltar</a>
    <button type="submit" class="btn btn-success">Salvar Progresso</button>
  </div>
</form>
        <% } else { %>
          <p class="text-center">Nenhum tratamento encontrado para este cliente.</p>
        <% } %>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include('includes/script') %>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<title>Procedimentos</title>

<style>
    /* Evita que as cards ultrapassem a largura */
    .card {
        width: 100%;
        max-width: 100%;
        overflow: hidden;
        word-wrap: break-word;
    }

    /* Garante que as colunas fiquem responsivas */
    .col-md-6 {
        flex: 1 1 100%;
        max-width: 100%;
    }

    /* Corrige os spans (badges) para não vazarem */
    .badge-custom {
        background-color: #007d7b !important;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
        white-space: nowrap;
        max-width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Estilização do botão sem hover */
    .btn-custom {
        background-color: #007d7b !important;
        color: white !important;
        border: 1px solid #007d7b !important;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 5px;
        display: block;
        width: fit-content; /* Define o tamanho do botão de acordo com o texto */
        text-align: center;
        margin-top: 10px;
        cursor: pointer;
    }

    /* Remove qualquer efeito ao passar o mouse */
    .btn-custom:hover, 
    .btn-custom:focus, 
    .btn-custom:active {
        background-color: #007d7b !important;
        color: white !important;
        border: 1px solid #007d7b !important;
        box-shadow: none !important;
    }
</style>


<body>
    <%- include('includes/navbar') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-2">
                <h1 class="text-center">Procedimentos</h1>
                <p class="text-center lead">Lista de tratamentos e seus pacientes</p>

                <%- include('includes/messeges') %>

                <div class="row">
                    <% if (tratamentos.length > 0) { %>
                        <% tratamentos.forEach(tratamento => { %>
                            <div class="col-md-6 mb-4">
                                <div class="card shadow-sm p-3">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Tratamento: 
                                            <% if (tratamento.sessao && tratamento.sessao.tratamentos) { %>
                                                <% JSON.parse(tratamento.sessao.tratamentos).forEach(nomeTratamento => { %>
                                                    <span class="badge badge-custom"><%= nomeTratamento %></span>
                                                <% }) %>
                                            <% } else { %>
                                                <span class="text-muted">Sem informação</span>
                                            <% } %>
                                        </h5>
                                        <p class="card-text">
                                            <strong>Paciente:</strong> <%= tratamento.usuario ? tratamento.usuario.nome : "Desconhecido" %> <br>
                                            <strong>Email:</strong> <%= tratamento.usuario ? tratamento.usuario.email : "N/A" %> <br>
                                            <strong>Preço:</strong> R$ <%= tratamento.preco %> <br>
                                            <strong>Status:</strong> <%= tratamento.status %> <br>
                                            <strong>Data:</strong> <%= tratamento.created_at.toLocaleDateString() %>
                                        </p>

                                        <!-- Botão para verificar progresso -->
                                        <a class="btn btn-custom">
                                            <strong>Verificar Progresso</strong>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-muted">Nenhum tratamento encontrado.</p>
                    <% } %>
                </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

   

    <%- include('includes/script') %>
</body>

</html>
